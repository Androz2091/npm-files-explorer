{
    "manifest_version": 2,
    
    "name": "NPM File Explorer",
    "version": "0.0.1",
    "description": "Adds a button to browse files of a package on NPM",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    
    "content_scripts": [{
        "css": ["button.css", "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"],
        "js": ["content.js"],
        "matches": ["https://www.npmjs.com/package/*"]
    }]
 
}