{
    "manifest_version": 2,
    
    "version": "0.0.1",
    "name": "NPM Files Explorer",
    "description": "Adds a button to browse files of a package on NPM",

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    
    "content_scripts": [{
        "css": ["button.css"],
        "js": ["content.js"],
        "matches": ["https://www.npmjs.com/package/*"]
    }]
 
}
